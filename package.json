{
  "name": "chinese-code-runner",
  "displayName": "Chinese Code Runner",
  "description": "Run Chinese Programming Language files in VS Code",
  "version": "0.1.0",
  "publisher": "sunrunner",
  "author": {
    "name": "Sun"
  },
  "icon": "logo.jpeg",
  "homepage": "https://github.com/wangyang622/chinese-progra",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wangyang622/chinese-progra"
  },
  "bugs": {
    "url": "https://github.com/wangyang622/chinese-progra/issues"
  },
  "activationEvents": [
    "onLanguage:chineseprog",
    "onCommand:chineseprog.runCode"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7",
    "typescript": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.5.0"
  },
  "contributes": {
    "languages": [{
      "id": "chineseprog",
      "aliases": ["ChineseProg", "中文编程"],
      "extensions": [".zs"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "chineseprog",
      "scopeName": "source.chineseprog",
      "path": "./syntaxes/chineseprog.tmLanguage.json"
    }],
    "commands": [
      {
        "command": "chineseprog.runCode",
        "title": "Run Chinese Code",
        "category": "Chinese"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == chineseprog",
          "command": "chineseprog.runCode",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .zs",
          "command": "chineseprog.runCode",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == chineseprog",
          "command": "chineseprog.runCode",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "chineseprog.runView",
          "name": "中文编程"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "中文编程",
      "properties": {
        "chineseprog.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "启用代码诊断"
        }
      }
    }
  }
} 